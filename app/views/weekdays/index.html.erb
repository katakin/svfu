<h1>Listing weekdays</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Deleted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @weekdays.each do |weekday| %>
  <tr>
    <td><%= weekday.name %></td>
    <td><%= weekday.deleted %></td>
    <td><%= link_to 'Show', weekday %></td>
    <td><%= link_to 'Edit', edit_weekday_path(weekday) %></td>
    <td><%= link_to 'Destroy', weekday, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


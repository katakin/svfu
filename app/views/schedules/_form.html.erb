<%= simple_form_for(@schedule) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :parity %>
    <%= f.input :occupation %>
    <%= f.association :teacher, label_method: :fio %>
    <%= f.association :pair %>
    <%= f.association :room %>
    <%= f.association :subject %>
    <%= f.association :weekday %>
    <%= f.association :group %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
